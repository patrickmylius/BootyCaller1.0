<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<GridPane fx:id="grid" styleClass="grid" fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15">

    <Label fx:id="name" text="Name:" styleClass="name"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Label fx:id="class" text="Class:" styleClass="class"
           GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label fx:id="spec" text="Specialization:" styleClass="spec"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Generate"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <stylesheets>
        <URL value="@resources/style.css" />
    </stylesheets>

</GridPane>